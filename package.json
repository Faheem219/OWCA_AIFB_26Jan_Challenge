{
    "name": "multilingual-mandi-marketplace",
    "version": "1.0.0",
    "description": "AI-powered multilingual marketplace for Indian local markets",
    "private": true,
    "workspaces": [
        "frontend",
        "backend"
    ],
    "scripts": {
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "cd backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
        "dev:all": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
        "build": "npm run build:frontend && npm run build:backend",
        "build:frontend": "cd frontend && npm run build",
        "build:backend": "cd backend && python -m build",
        "test": "npm run test:frontend && npm run test:backend",
        "test:frontend": "cd frontend && npm run test",
        "test:backend": "cd backend && python -m pytest",
        "lint": "npm run lint:frontend && npm run lint:backend",
        "lint:frontend": "cd frontend && npm run lint",
        "lint:backend": "cd backend && python -m flake8 .",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f",
        "setup": "npm install && cd frontend && npm install && cd ../backend && pip install -r requirements.txt"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/your-org/multilingual-mandi-marketplace.git"
    },
    "keywords": [
        "marketplace",
        "multilingual",
        "ai",
        "translation",
        "mandi",
        "india",
        "fastapi",
        "react",
        "pwa"
    ],
    "author": "Your Organization",
    "license": "MIT"
}