# Environment Configuration for Multilingual Mandi Marketplace

# Application Environment
NODE_ENV=development
PYTHON_ENV=development

# Database Configuration
MONGODB_URL=mongodb://admin:password123@localhost:27017/mandi_marketplace?authSource=admin
MONGODB_DATABASE=mandi_marketplace

# Redis Configuration
REDIS_URL=redis://:redis123@localhost:6379/0

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# AWS Configuration for AI Services
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
AWS_TRANSLATE_REGION=ap-south-1
AWS_SAGEMAKER_REGION=ap-south-1

# External API Configuration
AGMARKNET_API_KEY=your-agmarknet-api-key
AGMARKNET_BASE_URL=https://api.data.gov.in/resource

# Payment Gateway Configuration
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
UPI_MERCHANT_ID=your-upi-merchant-id

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp
UPLOAD_DIRECTORY=uploads

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:80
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Configuration
REDIS_CACHE_TTL=3600
TRANSLATION_CACHE_TTL=86400
PRICE_CACHE_TTL=1800

# Feature Flags
ENABLE_VOICE_MESSAGES=true
ENABLE_AI_MODERATION=true
ENABLE_PRICE_PREDICTION=true
ENABLE_OFFLINE_MODE=true

# Development Configuration
DEBUG=true
RELOAD=true
WORKERS=1

# Production Configuration (uncomment for production)
# DEBUG=false
# RELOAD=false
# WORKERS=4
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/mandi_marketplace
# REDIS_URL=redis://your-redis-cloud-url:6379/0